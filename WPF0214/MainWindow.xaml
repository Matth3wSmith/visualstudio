<Window x:Class="WPF0214.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF0214"
        mc:Ignorable="d"
        Title="Belépés" Height="206" Width="491">
    <Grid>
        <Button Content="Belépés" HorizontalAlignment="Left" Margin="80,118,0,0" VerticalAlignment="Top" Height="29" Width="80" Click="Button_Click"/>
        <Label Content="Név:" HorizontalAlignment="Left" Margin="30,19,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="nevDoboz" HorizontalAlignment="Left" Margin="80,23,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Label Content="Jelszó:" HorizontalAlignment="Left" Margin="25,58,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="jelszo" HorizontalAlignment="Left" Margin="80,62,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ListBox x:Name="adatLista" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="214,0,0,0" SelectionChanged="ListBox_SelectionChanged"/>

    </Grid>
</Window>
